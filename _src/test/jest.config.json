{
  "verbose": true,
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },

  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testRegex": ".*.test.ts$",
  "coverageDirectory": "<rootDir>/test/coverage",
  "testPathIgnorePatterns": ["<rootDir>/_src/test/stubbbb"],
  "testEnvironment": "node",
  "clearMocks": true
}
